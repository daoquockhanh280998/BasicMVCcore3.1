@model ListDatasource
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="article-list">
    <div class="container">
        @foreach (var item in Model.Data as IEnumerable<Article>)
        {
            <div class="row">
                <div class="col-12 col-md-4">
                    <a asp-route="Acticle-Detail" asp-route-id="@item.ArticleID" asp-route-title="@item.Title.ToUrlFormat()">
                        <img class="img-fluid img-thumbnail" src="@item.Avatar" />
                    </a>
                </div>
                <div class="col-12 col-md-8">
                    <h4 class="text-uppercase">
                        @item.Title
                    </h4>
                    <div class="text-justify">
                        @item.Description
                    </div>
                    <a class="btn btn-warning pull-right" asp-route="Acticle-Detail" asp-route-id="@item.ArticleID" asp-route-title="@item.Title.ToUrlFormat()">
                        <i class="fa fa-hand-o-right"></i>
                        Xem thêm
                    </a>
                </div>
            </div>
        }


        <div class="row">
            <div class="col">
                <vc:vc-pagging totals="@Model.Total" page-size="@Model.PageSize" page="@Model.Page" url="@Model.Url" max-page="@Model.MaxPage" />

            </div>
        </div>
    </div>
</section>

