@model PaggingDatasource
    <ul class="pagination">

        <li class="prev"><a href="@Model.PageFirstUrl"><i class="fa fa-angle-double-left"></i></a></li>
        <li class="prev"><a href="@Model.PageBackUrl"><i class="fa fa-angle-left"></i></a></li>

        @foreach (var item in Model.PageNumbers)
        {
            <li class='@(item.Key == @Model.Page ? "page active" : "page")'><a href="@item.Value">@item.Key</a></li>
        }

        <li class="next"><a href="@Model.PageNextUrl"><i class="fa fa-angle-right"></i></a></li>
        <li class="next"><a href="@Model.PageLastUrl"><i class="fa fa-angle-double-right"></i></a></li>

    </ul>